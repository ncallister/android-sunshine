<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="iwsoftware.com.au.sunshine.app.DetailActivity.DetailFragment">


  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Today"
    android:id="@+id/textview_day_of_week"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:fontFamily="sans-serif-condensed"
    android:textSize="24sp"
    android:textColor="@android:color/black"/>

  <TextView
    android:text="June 18"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textview_date"
    android:layout_marginLeft="16dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textview_day_of_week"
    android:layout_marginRight="16dp"
    android:fontFamily="sans-serif-condensed"
    android:layout_marginTop="4dp"
    android:textSize="16sp"
    android:textColor="#646464"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="22°"
    android:id="@+id/textview_max"
    android:layout_alignParentTop="false"
    android:layout_alignParentLeft="true"
    android:gravity="center_vertical|right"
    android:layout_marginLeft="16dp"
    android:layout_below="@+id/textview_date"
    android:fontFamily="sans-serif-light"
    android:textSize="96sp"
    android:textColor="@android:color/black"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="12°"
    android:id="@+id/textview_min"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textview_max"
    android:gravity="center"
    android:layout_marginLeft="16dp"
    android:fontFamily="sans-serif-light"
    android:textSize="48sp"
    android:textColor="#646464"
    android:layout_alignRight="@+id/textview_max"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageview_icon"
    android:layout_alignParentRight="true"
    android:layout_toRightOf="@+id/textview_max"
    android:src="@drawable/art_clear"
    android:layout_alignTop="@+id/textview_max"
    android:layout_marginRight="16dp"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Clear"
    android:id="@+id/textview_description"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/imageview_icon"
    android:layout_toRightOf="@+id/textview_max"
    android:gravity="center"
    android:layout_marginRight="16dp"
    android:fontFamily="sans-serif-condensed"
    android:textSize="22sp"
    android:textColor="#646464"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Humidity: 71 %"
    android:id="@+id/textview_humidity"
    android:layout_below="@+id/textview_min"
    android:layout_marginLeft="16dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="16dp"
    android:fontFamily="sans-serif-light"
    android:textSize="22sp"
    android:textColor="@android:color/black"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pressure: 1016 hPa"
    android:id="@+id/textview_pressure"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/textview_humidity"
    android:fontFamily="sans-serif-light"
    android:layout_marginTop="4dp"
    android:textSize="22sp"
    android:textColor="@android:color/black"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Wind: 2km/h NW"
    android:id="@+id/textview_wind"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/textview_pressure"
    android:fontFamily="sans-serif-light"
    android:layout_marginTop="4dp"
    android:textSize="22sp"
    android:textColor="@android:color/black"/>

</RelativeLayout>
